<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        
        <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
            <div class="pos-receipt">
                <t t-if="receipt.company.logo">
                    <img class="pos-receipt-logo" t-att-src="receipt.company.logo" alt="Logo"/>
                    <br/>
                </t>
                <t t-if="!receipt.company.logo">
                    <h2 class="pos-receipt-center-align">
                        <t t-esc="receipt.company.name" />
                    </h2>
                    <br/>
                </t>
                <div class="pos-receipt-contact">
                    <t t-if="receipt.company.contact_address">
                    <div>Address: <t t-esc="receipt.company.contact_address"/></div>
                    </t>
                    <t t-if="receipt.company.phone">
                        <div>Tel:<t t-esc="receipt.company.phone" /></div>
                    </t>
                    <t t-if="receipt.company.vat">
                        <div><t t-esc="receipt.company.vat_label"/>:<t t-esc="receipt.company.vat" /></div>
                    </t>
                    <div>
                        FLEMINGS-SAFETY.COM
                    </div>
                    <br/>
                    <br/>
                    <div>FUNFIT @ NEX</div>
                
                    <t t-if="receipt.cashier">
                        <div>Served by: <t t-esc="receipt.cashier"/></div>
                    </t>
                    <hr style="border-top: 1px dashed;"/>
                    <t t-if="receipt.name">
                        <div>Receipt / Tax Invoice : <t t-esc="receipt.name"/></div>
                        <div><t t-esc="receipt.date.localestring"/> </div>
                    </t>
                    <hr style="border-top: 1px dashed;"/>
                </div>
                <br /><br />

                <!-- Orderlines -->

                <div class="orderlines">
                    <t t-call="OrderLinesReceipt"/>
                </div>

                <!-- Subtotal -->

                <!--<t t-if="!isTaxIncluded">
                    <div class="pos-receipt-right-align"></div>
                    <br/>
                    <div>Subtotal<span t-esc="env.pos.format_currency(receipt.subtotal)" class="pos-receipt-right-align"/></div>
                    <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.tax.id">
                        <div class="responsive-price">
                            <t t-esc="tax.name" />
                            <span t-esc='env.pos.format_currency_no_symbol(tax.amount)' class="pos-receipt-right-align"/>
                        </div>
                    </t>
                </t> -->

                <!-- Total -->
                <hr style="border-top: 1px dashed;"/>
                <br/>
                <div class="pos-receipt-amount">
                    <div><span style="float:left">TOTAL( items <t t-esc="receipt.orderlines.length"/>)</span><span t-esc="env.pos.format_currency(receipt.total_with_tax)" style="float:right"/></div>
                </div>
                <br/>
                <br/>
                <hr style="border-top: 1px;"/>
                <!-- <t t-if="receipt.total_rounded != receipt.total_with_tax">
                    <div class="pos-receipt-amount">
                    Rounding
                    <span t-esc='env.pos.format_currency(receipt.rounding_applied)' class="pos-receipt-right-align"/>
                    </div>
                    <div class="pos-receipt-amount">
                    To Pay
                    <span t-esc='env.pos.format_currency(receipt.total_rounded)' class="pos-receipt-right-align"/>
                </div>
                </t>
                <br/><br/> -->
                <br/>
                <!-- Payment Lines -->
                <t t-foreach="receipt.paymentlines" t-as="line" t-key="line.cid">
                    <div>
                        <t t-esc="line.name" />
                        <span t-esc="env.pos.format_currency_no_symbol(line.amount)" class="pos-receipt-right-align"/>
                    </div>
                </t>
                <br/>
                <hr style="border-top: 1px ;"/>
                <br/>
                <t t-if="isTaxIncluded">
                    <t id="tax-details" t-foreach="receipt.tax_details" t-as="tax" t-key="tax.tax.id">
                        <div>
                            <t t-esc="tax.name" />
                            <!-- <span t-esc="env.pos.format_currency(tax.amount)" class="pos-receipt-right-align"/> -->
                            <span t-esc="env.pos.format_currency_no_symbol(tax.amount)" class="pos-receipt-right-align"/>
                        </div>
                    </t>
                    <div>
                        Total Taxes
                        <span t-esc="env.pos.format_currency(receipt.total_tax)" class="pos-receipt-right-align"/>
                    </div>
                </t>

                <div class="before-footer" />

                <div t-if="receipt.pos_qr_code">
                    <br /><br />
                    <div class="pos-receipt-order-data">
                        Scan me to request an invoice for your purchase.
                    </div>
                    <img id="posqrcode" t-att-src="receipt.pos_qr_code" class="pos-receipt-qrcode"/>
                </div>

                <!-- Footer -->
                <div t-if="receipt.footer_html"  class="pos-receipt-center-align">
                    <t t-out="receipt.footer_html" />
                </div>
                

                <div t-if="!receipt.footer_html and receipt.footer"  class="pos-receipt-center-align" style="white-space:pre-line">
                    <br/>
                    <t t-esc="receipt.footer" />
                    <br/>
                    <br/>
                </div>
                <hr style="border-top: 1px dashed;"/>
            </div>
        </xpath>
    </t>
    <t t-name="OrderLinesReceipt" t-inherit="point_of_sale.OrderLinesReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-foreach='receipt.orderlines']" position="replace">
            <t t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
                <div t-esc="line.product_name_wrapped[0]" style="width:70%"/>
                <WrappedProductNameLines line="line" />
                <div class="pos-receipt-qty-per-price pos-receipt-left-padding">
                    <t t-esc="Math.round(line.quantity * Math.pow(10, env.pos.dp['Product Unit of Measure'])) / Math.pow(10, env.pos.dp['Product Unit of Measure'])"/>
                    <t t-if="!line.is_in_unit" t-esc="line.unit_name" />
                    @
                    <t t-if="line.price_with_tax != line.price_lst and line.discount == 0 and line.price_lst != 0 and line.price_with_tax &lt; line.price_lst ">
                        <span style="text-decoration: line-through;"><t t-esc="env.pos.format_currency_no_symbol(line.price_lst)"/></span> <t t-esc="env.pos.format_currency_no_symbol(line.price_with_tax)"/>
                    </t>
                    <t t-else="">
                        <t t-esc="env.pos.format_currency_no_symbol(line.price_with_tax)"/>
                    </t>
                    <span class="price_display pos-receipt-right-align">
                        <t t-esc="env.pos.format_currency_no_symbol(line.price_with_tax)"/>
                    </span>
                </div>

                <t t-if="line.discount !== 0">
                    <div class="pos-receipt-left-padding">
                        Disc: <t t-esc="Math.round(line.discount * 100)/100"/>% (<t t-esc="env.pos.format_currency_no_symbol((line.price_with_tax_before_discount * line.quantity) - line.price_with_tax)"/>)
                        <span class="price_display pos-receipt-right-align" style="text-decoration: line-through;">
                            <t t-esc="env.pos.format_currency_no_symbol(line.price_with_tax_before_discount * line.quantity)"/>
                        </span>
                    </div>
                </t>
            </t>
        </xpath>
    </t>
</template>