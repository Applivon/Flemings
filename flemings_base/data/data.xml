<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">

		<record id="stock_route_buy_external" model="stock.route">
			<field name="name">Buy - External</field>
			<field name="is_buy_external" eval="True"/>
			<field name="is_access_restrict" eval="True"/>
			<field name="company_id" eval="False"/>
			<field name="product_selectable" eval="True"/>
			<field name="sale_selectable" eval="True"/>
		</record>

		<record id="stock_route_buy_internal" model="stock.route">
			<field name="name">Buy - Internal</field>
			<field name="is_buy_internal" eval="True"/>
			<field name="is_access_restrict" eval="True"/>
			<field name="company_id" eval="False"/>
			<field name="product_selectable" eval="True"/>
			<field name="sale_selectable" eval="True"/>
		</record>

		<!-- Sequences -->
		<record id="ir_sequence_mrp_production_work_order_number" model="ir.sequence">
			<field name="name">Manufacturing - Work Order No.</field>
			<field name="code">mrp.production.work.order.no</field>
			<field name="prefix">WO/</field>
			<field name="padding">4</field>
			<field name="number_increment">1</field>
			<field name="number_next_actual">1</field>
			<field name="implementation">standard</field>
			<field name="company_id" eval="False"/>
		</record>

		<!--	Sales Order - Custom Sequence	-->
		<record id="ir_sequence_service_package_ref" model="ir.sequence">
			<field name="name">Sales Order - Custom Sequence</field>
			<field name="code">sale.order.fg.seq</field>
			<field name="prefix">SO/%(range_year)s</field>
			<field name="padding">4</field>
			<field name="implementation">no_gap</field>
			<field name="use_date_range">True</field>
            <field name="date_range_ids" eval="[(5, 0, 0),
                        (0, 0, {'date_from': '2024-01-01', 'date_to': '2024-12-31', 'number_next_actual':1}),
            ]"/>
			<field name="company_id" eval="False"/>
		</record>

		<!-- Allow updating on noupdate=True records -->
        <function name="write" model="ir.model.data">
	        <function name="search" model="ir.model.data">
	            <value eval="[('module', '=', 'sale'), ('name', '=', 'seq_sale_order')]"/>
	        </function>
	        <value eval="{'noupdate': False}"/>
	    </function>

        <!-- Update noupdate=1 record -->
        <record id="sale.seq_sale_order" model="ir.sequence">
	        <field name="name">Quotation - Custom Sequence</field>
			<field name="prefix">QO/%(range_year)s</field>
			<field name="padding">4</field>
			<field name="implementation">no_gap</field>
			<field name="use_date_range">True</field>
            <field name="date_range_ids" eval="[(5, 0, 0),
                        (0, 0, {'date_from': '2024-01-01', 'date_to': '2024-12-31', 'number_next_actual':1}),
            ]"/>
	    </record>

	    <!-- Revoke noupdate change -->
        <function name="write" model="ir.model.data">
	        <function name="search" model="ir.model.data">
	            <value eval="[('module', '=', 'sale'), ('name', '=', 'seq_sale_order')]"/>
	        </function>
	        <value eval="{'noupdate': True}"/>
	    </function>

	</data>
</odoo>
