<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		
		<!-- 	Flemings User - System Group    -->
    	<record id="flemings_user_system_group_category" model="ir.module.category">
            <field name="name">Flemings User System Group</field>
            <field name="sequence">-8</field>
        </record>

    	<record id="fg_sales_group" model="res.groups">
            <field name="name">Sales</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_procurement_group" model="res.groups">
            <field name="name">Procurement</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_inventory_group" model="res.groups">
            <field name="name">Inventory</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_finance_with_report_group" model="res.groups">
            <field name="name">Finance with Report</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_finance_wo_report_group" model="res.groups">
            <field name="name">Finance without Report</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_operations_group" model="res.groups">
            <field name="name">Operations</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_mr_group" model="res.groups">
            <field name="name">MR</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_product_marketing_group" model="res.groups">
            <field name="name">Product &amp; Marketing</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_su_wo_account_group" model="res.groups">
            <field name="name">Super User (w/o Accounting &amp; HR)</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_su_with_hr_group" model="res.groups">
            <field name="name">Super User (with HR)</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

    	<record id="fg_su_group" model="res.groups">
            <field name="name">Super User</field>
            <field name="category_id" ref="flemings_user_system_group_category"/>
        </record>

        <!-- Record Rules - Item Category -->
        <record id="fg_item_category_admin_access" model="ir.rule">
            <field name="name">Item Category - Admin/Accounts</field>
            <field name="model_id" ref="flemings_base.model_fg_item_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('flemings_base.fg_su_group')])]"/>
        </record>

        <record id="fg_item_category_user_access" model="ir.rule">
            <field name="name">Item Category - Users</field>
            <field name="model_id" ref="flemings_base.model_fg_item_category"/>
            <field name="domain_force">['|', ('user_ids', '=', False), ('user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(6, 0, [ref('flemings_base.fg_sales_group'),ref('flemings_base.fg_procurement_group'),
            ref('flemings_base.fg_inventory_group'), ref('flemings_base.fg_finance_with_report_group'),
            ref('flemings_base.fg_finance_wo_report_group'), ref('flemings_base.fg_operations_group'),
            ref('flemings_base.fg_mr_group'), ref('flemings_base.fg_product_marketing_group'),
            ref('flemings_base.fg_su_wo_account_group'), ref('flemings_base.fg_su_with_hr_group')
            ])]"/>
        </record>

        <!-- Record Rules - Product Template - Item Category -->
        <record id="product_template_item_category_admin_access" model="ir.rule">
            <field name="name">Products - Item Category - Admin</field>
            <field name="model_id" ref="flemings_base.model_product_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('flemings_base.fg_su_group')])]"/>
        </record>

        <record id="product_template_item_category_user_access" model="ir.rule">
            <field name="name">Products - Item Category - Users</field>
            <field name="model_id" ref="flemings_base.model_product_template"/>
            <field name="domain_force">['|', ('item_category_id', '=', False), ('item_category_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(6, 0, [ref('flemings_base.fg_sales_group'),ref('flemings_base.fg_procurement_group'),
            ref('flemings_base.fg_inventory_group'), ref('flemings_base.fg_finance_with_report_group'),
            ref('flemings_base.fg_finance_wo_report_group'), ref('flemings_base.fg_operations_group'),
            ref('flemings_base.fg_mr_group'), ref('flemings_base.fg_product_marketing_group'),
            ref('flemings_base.fg_su_wo_account_group'), ref('flemings_base.fg_su_with_hr_group')
            ])]"/>
        </record>

        <!-- Record Rules - Product Variant - Item Category -->
        <record id="product_product_item_category_admin_access" model="ir.rule">
            <field name="name">Product Variants - Item Category - Admin</field>
            <field name="model_id" ref="flemings_base.model_product_product"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('flemings_base.fg_su_group')])]"/>
        </record>

        <record id="product_product_item_category_user_access" model="ir.rule">
            <field name="name">Product Variants - Item Category - Users</field>
            <field name="model_id" ref="flemings_base.model_product_product"/>
            <field name="domain_force">['|', ('item_category_id', '=', False), ('item_category_id.user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(6, 0, [ref('flemings_base.fg_sales_group'),ref('flemings_base.fg_procurement_group'),
            ref('flemings_base.fg_inventory_group'), ref('flemings_base.fg_finance_with_report_group'),
            ref('flemings_base.fg_finance_wo_report_group'), ref('flemings_base.fg_operations_group'),
            ref('flemings_base.fg_mr_group'), ref('flemings_base.fg_product_marketing_group'),
            ref('flemings_base.fg_su_wo_account_group'), ref('flemings_base.fg_su_with_hr_group')
            ])]"/>
        </record>

        <!-- Record Rules - Account Journals -->
        <record id="fg_account_journal_admin_access" model="ir.rule">
            <field name="name">Accounting Journals - Admin/Accounts</field>
            <field name="model_id" ref="account.model_account_journal"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('flemings_base.fg_su_group')])]"/>
        </record>

        <record id="fg_account_journal_user_access" model="ir.rule">
            <field name="name">Accounting Journals - Users</field>
            <field name="model_id" ref="account.model_account_journal"/>
            <field name="domain_force">[('id', 'in', user.journal_ids.ids)]</field>
            <field name="groups" eval="[(6, 0, [ref('flemings_base.fg_sales_group'),ref('flemings_base.fg_procurement_group'),
            ref('flemings_base.fg_inventory_group'), ref('flemings_base.fg_finance_with_report_group'),
            ref('flemings_base.fg_finance_wo_report_group'), ref('flemings_base.fg_operations_group'),
            ref('flemings_base.fg_mr_group'), ref('flemings_base.fg_product_marketing_group'),
            ref('flemings_base.fg_su_wo_account_group'), ref('flemings_base.fg_su_with_hr_group')
            ])]"/>
        </record>

        <!-- Employee Record Rules -->
        <record id="sg_hr_employee.property_rule_hr_employee_users" model="ir.rule">
            <field name="name">Employee can see own record</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
            <field name='perm_create' eval='True'/>
            <field name='perm_read' eval='True'/>
            <field name='perm_unlink' eval='True'/>
            <field name='perm_write' eval='True'/>
        </record>

	</data>
</odoo>
