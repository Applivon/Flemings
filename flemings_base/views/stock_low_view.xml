<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

		<!-- Flemings - Stock Running Low Scheduler -->
		<record id="fg_stock_low_scheduler_form_view" model="ir.ui.view">
	        <field name="name">fg.stock.low.scheduler.form</field>
	        <field name="model">fg.stock.low.scheduler</field>
	        <field name="arch" type="xml">
	            <form string="Parameters">
					<p>
						Products that are running low in stock based on the set minimum stock level.
					</p>
					<group/><group/>
					<group>
						<field name="type" nolabel="1" widget="radio" options="{'horizontal': true}"/>
					</group>
					<footer>
						<button name="get_stock_low_products" string="Fetch" type="object" class="btn-primary" data-hotkey="q"/>
						<button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
					</footer>
				</form>
	        </field>
	    </record>

	    <record id="fg_stock_low_scheduler_action" model="ir.actions.act_window">
	        <field name="name">Stock Running Low</field>
	        <field name="res_model">fg.stock.low.scheduler</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
	    </record>

		<menuitem id="menu_fg_stock_low" parent="stock.menu_warehouse_report" action="fg_stock_low_scheduler_action" sequence="310"/>

		<!-- Flemings - Stock Running Low - By Location -->
		<record id="fg_stock_low_list_view" model="ir.ui.view">
	        <field name="name">fg.stock.low.tree</field>
	        <field name="model">stock.quant</field>
	        <field name="arch" type="xml">
	            <tree string="Stock Running Low" create="0" edit="0" delete="0" duplicate="0">
	                <field name="product_id" options="{'no_open': True, 'no_create':True}"/>
	                <field name="location_id" options="{'no_open': True, 'no_create':True}"/>
	                <field name="available_quantity"/>
					<field name="quantity" string="On Hand Quantity"/>
	                <field name="min_stock_quantity"/>
	            </tree>
	        </field>
	    </record>

		<record id="fg_stock_low_search_view" model="ir.ui.view">
            <field name="name">fg.stock.low.search</field>
            <field name="model">stock.quant</field>
            <field name="arch" type="xml">
                <search string="Stock Running Low">
                    <field name="product_id"/>
                    <field name="location_id"/>
					<group expand="0" string="Group By...">
                        <filter name="product_id" string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                        <filter name="location_id" string="Location" domain="[]" context="{'group_by':'location_id'}"/>
                    </group>
                </search>
            </field>
        </record>

	    <record id="fg_stock_low_action" model="ir.actions.act_window">
	        <field name="name">Stock Running Low</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">stock.quant</field>
	        <field name="domain">[('id', '=', 0)]</field>
	        <field name="context">{'action_stock_running_low': True}</field>
			<field name="search_view_id" ref="fg_stock_low_search_view"/>
            <field name="view_id" ref="fg_stock_low_list_view"/>
	    </record>

		<!-- Flemings - Stock Running Low - By Consolidation-->
		<record id="fg_stock_low_by_consolidation_list_view" model="ir.ui.view">
	        <field name="name">fg.stock.low.by.consolidation.tree</field>
	        <field name="model">stock.quant.by.consolidation</field>
	        <field name="arch" type="xml">
	            <tree string="Stock Running Low" create="0" edit="0" delete="0" duplicate="0">
	                <field name="product_id" options="{'no_open': True, 'no_create':True}"/>
	                <field name="available_quantity"/>
	                <field name="quantity" string="On Hand Quantity"/>
	                <field name="min_stock_quantity"/>
	            </tree>
	        </field>
	    </record>

		<record id="fg_stock_low_by_consolidation_search_view" model="ir.ui.view">
            <field name="name">fg.stock.low.by.consolidation.search</field>
            <field name="model">stock.quant.by.consolidation</field>
            <field name="arch" type="xml">
                <search string="Stock Running Low">
                    <field name="product_id"/>
					<group expand="0" string="Group By..."/>
                </search>
            </field>
        </record>

	    <record id="fg_stock_low_by_consolidation_action" model="ir.actions.act_window">
	        <field name="name">Stock Running Low</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">stock.quant.by.consolidation</field>
	        <field name="domain">[('id', '=', 0)]</field>
			<field name="search_view_id" ref="fg_stock_low_by_consolidation_search_view"/>
            <field name="view_id" ref="fg_stock_low_by_consolidation_list_view"/>
	    </record>

		<!-- Product - Variant - Form View Inherit -->
		<record id="fg_product_template_min_stock_only_form_view_inherit" model="ir.ui.view">
			<field name="name">product.template.product.form.sync</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='uom_po_id']" position="after">
					<field name="min_stock_quantity" attrs="{'invisible': ['|', ('product_variant_count', '&gt;', 1), ('detailed_type', '!=', 'product')]}"/>
				</xpath>
			</field>
		</record>

		<record id="fg_product_product_min_stock_easy_form_view_inherit" model="ir.ui.view">
			<field name="name">fg.product.product.min.stock.easy.form.view.inherit</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='barcode']" position="after">
					<field name="detailed_type" invisible="1"/>
					<field name="min_stock_quantity" attrs="{'invisible': [('detailed_type', '!=', 'product')]}"/>
				</xpath>
			</field>
		</record>

		<record id="fg_product_product_min_stock_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">fg.product.product.min.stock.normal.form.view.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="min_stock_quantity" attrs="{'invisible': [('detailed_type', '!=', 'product')]}"/>
                </xpath>
            </field>
        </record>

		<!-- Warehouse -->
		<record id="fg_stock_view_warehouse_tree_view_inherit" model="ir.ui.view">
            <field name="name">fg.stock.view.warehouse.tree.view.inherit</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="delete">0</attribute>
                </xpath>
            </field>
        </record>

		<record id="fg_stock_view_warehouse_form_view_inherit" model="ir.ui.view">
            <field name="name">fg.stock.view.warehouse.form.view.inherit</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="delete">0</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>