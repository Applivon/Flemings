<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="fg_user_access_form_view_inherit" model="ir.ui.view">
			<field name="name">fg.user.access.form.view.inherit</field>
			<field name="model">res.users</field>
			<field name="inherit_id" ref="base.user_groups_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='companies_count']" position="after">
					<field name="route_ids" domain="[('is_access_restrict', '=', True)]" context="{'user_routes_selection': True}"
						   widget="many2many_tags" options="{'no_open': True, 'no_create':True}"/>
					<field name="journal_ids" widget="many2many_tags" options="{'no_open': True, 'no_create':True}"/>
				</xpath>
				<xpath expr="//page[@name='access_rights']/group[1]" position="after">
					<group name="fg_user_access" string="Flemings User Access">
						<group>
							<field name="fg_sales_group"/>
							<field name="fg_inventory_group"/>
							<field name="fg_finance_with_report_group"/>
							<field name="fg_mr_group"/>
							<field name="fg_su_group" groups="flemings_base.fg_su_group"/>
						</group>
						<group>
							<field name="fg_procurement_group"/>
							<field name="fg_operations_group"/>
							<field name="fg_finance_wo_report_group"/>
							<field name="fg_product_marketing_group"/>
							<field name="fg_su_with_hr_group"/>
							<field name="fg_su_wo_account_group"/>
						</group>
					</group>
				</xpath>
			</field>
		</record>

		<record id="fg_res_partner_kanban_user_view_inherit" model="ir.ui.view">
			<field name="name">fg.res.partner.kanban.user.view.inherit</field>
			<field name="model">res.users</field>
			<field name="inherit_id" ref="base_setup.res_partner_kanban_view"/>
			<field name="arch" type="xml">
				<xpath expr="//span[hasclass('oe_kanban_list_many2many')]" position="after">
					<strong t-if="record.user_id.raw_value"><field name="user_id"/></strong>
                </xpath>
			</field>
		</record>

    </data>
</odoo>