		<record id="fg_res_partner_kanban_user_view_one_inherit" model="ir.ui.view">
			<field name="name">fg.res.partner.kanban.user.view.one.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base_setup.res_partner_kanban_view"/>
			<field name="arch" type="xml">
				<xpath expr="//span[hasclass('oe_kanban_list_many2many')]" position="after">
					<strong t-if="record.user_id.raw_value"><field name="user_id"/></strong>
					<strong t-if="record.last_sale_date.raw_value">
						<br/><span>Last Sale Date : <field name="last_sale_date"/></span>
					</strong>
					<strong t-if="record.last_invoice_date.raw_value">
						<br/><span>Last Invoice Date : <field name="last_invoice_date"/></span>
					</strong>
					<strong t-if="record.last_purchase_date.raw_value">
						<br/><span>Last Purchase Date : <field name="last_purchase_date"/></span>
					</strong>
                </xpath>
			</field>
		</record>

		<record id="fg_res_partner_kanban_user_view_two_inherit" model="ir.ui.view">
