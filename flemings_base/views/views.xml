		<!-- Partner/Customer - Inheritance Update -->
		<record id="fg_res_partner_kanban_user_view_one_inherit" model="ir.ui.view">
			<field name="name">fg.res.partner.kanban.user.view.one.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base_setup.res_partner_kanban_view"/>
			<field name="arch" type="xml">
				<xpath expr="//span[hasclass('oe_kanban_list_many2many')]" position="after">
					<strong t-if="record.user_id.raw_value"><field name="user_id"/></strong>
					<strong t-if="record.last_sale_date.raw_value">
						<br/><span>Last Sale Date : <field name="last_sale_date"/></span>
					</strong>
					<strong t-if="record.last_invoice_date.raw_value">
						<br/><span>Last Invoice Date : <field name="last_invoice_date"/></span>
					</strong>
					<strong t-if="record.last_purchase_date.raw_value">
						<br/><span>Last Purchase Date : <field name="last_purchase_date"/></span>
					</strong>
                </xpath>
			</field>
		</record>

		<record id="fg_res_partner_kanban_user_view_two_inherit" model="ir.ui.view">
			<field name="name">fg.res.partner.kanban.user.view.two.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.res_partner_kanban_view"/>
			<field name="arch" type="xml">
				<xpath expr="//strong[hasclass('o_kanban_record_title')]" position="before">
					<span t-if="record.type = 'delivery' and record.comment.raw_value">
						<field name="comment"/>
					</span>
                </xpath>
			</field>
		</record>

		<record id="fg_res_partner_form_user_view_inherit" model="ir.ui.view">
			<field name="name">fg.res.partner.form.user.view.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='category_id']" position="after">
					<field name="last_sale_date" readonly="1" force_save="1" attrs="{'invisible':['|', ('last_sale_date', '=', False), ('customer_rank' ,'=', 0)]}"/>
					<field name="last_invoice_date" readonly="1" force_save="1" attrs="{'invisible':['|', ('last_invoice_date', '=', False), ('customer_rank' ,'=', 0)]}"/>
					<field name="last_purchase_date" readonly="1" force_save="1" attrs="{'invisible':['|', ('last_purchase_date', '=', False), ('supplier_rank' ,'=', 0)]}"/>
                </xpath>
				<xpath expr="//field[@name='vat']" position="after">
					<field name="can_edit_partner_address" invisible="1"/>
					<field name="is_sales_user_group" invisible="1"/>
					<field name="is_purchaser_user_group" invisible="1"/>
					<field name="customer_rank" invisible="1"/>
					<field name="supplier_rank" invisible="1"/>
					<field name="fax" attrs="{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)]}" force_save="1"/>
                </xpath>
				<xpath expr="//field[@name='type']" position="attributes">
					<attribute name="attrs">{'invisible': [('is_company','=', True)], 'required': [('is_company','!=', True)], 'readonly': ['|', '|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True), ('user_ids', '!=', [])]}</attribute>
                </xpath>
				<xpath expr="//field[@name='street']" position="attributes">
					<attribute name="attrs">{'readonly': [('can_edit_partner_address', '=', False)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='street2']" position="attributes">
					<attribute name="attrs">{'readonly': [('can_edit_partner_address', '=', False)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='city']" position="attributes">
					<attribute name="attrs">{'readonly': [('can_edit_partner_address', '=', False)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='state_id']" position="attributes">
					<attribute name="attrs">{'readonly': [('can_edit_partner_address', '=', False)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='zip']" position="attributes">
					<attribute name="attrs">{'readonly': [('can_edit_partner_address', '=', False)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='country_id']" position="attributes">
					<attribute name="attrs">{'readonly': [('can_edit_partner_address', '=', False)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='company_type']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='name'][1]" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'required' : [('type', '=', 'contact')], 'invisible': [('is_company','=', False)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='name'][2]" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'required' : [('type', '=', 'contact')], 'invisible': [('is_company','=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='parent_id']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}</attribute>
                </xpath>
				<xpath expr="//field[@name='company_name']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'invisible': ['|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='vat']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', '|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True), ('parent_id','!=',False)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='function']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'invisible': [('is_company','=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='phone']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='mobile']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='email']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'required': [('user_ids','!=', [])]}</attribute>
                </xpath>
				<xpath expr="//field[@name='website']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='title']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'invisible': [('is_company', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='lang']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'invisible': [('active_lang_count', '&lt;=', 1)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='category_id']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//field[@name='child_ids']" position="attributes">
					<attribute name="context">{'default_parent_id': active_id, 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_lang': lang, 'default_user_id': user_id, 'default_type': 'delivery'}</attribute>
                </xpath>
				<xpath expr="//field[@name='child_ids']/form/sheet/field[@name='type']" position="attributes">
					<attribute name="attrs">{'invisible': [('parent.is_sales_user_group', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='child_ids']/kanban/templates//field[@name='name']" position="before">
					<div t-if="record.type = 'delivery' and record.comment.raw_value">
                        <field name="comment"/>
                    </div>
                </xpath>
				<xpath expr="//group[@name='sale']/field[@name='user_id']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//group[@name='misc']/field[@name='company_registry']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'invisible': [('parent_id','!=',False)]}</attribute>
                </xpath>
				<xpath expr="//group[@name='misc']/field[@name='ref']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)]}</attribute>
                </xpath>
				<xpath expr="//group[@name='misc']/field[@name='company_id']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', '|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True), ('parent_id', '!=', False)]}</attribute>
                </xpath>
				<xpath expr="//group[@name='misc']/field[@name='industry_id']" position="attributes">
					<attribute name="attrs">{'readonly': ['|', ('is_sales_user_group', '=', True), ('is_purchaser_user_group', '=', True)], 'invisible': [('is_company', '=', False)]}</attribute>
                </xpath>

				<xpath expr="//page[@name='internal_notes']" position="before">
					<page name="customer_price_book_line" string="Customer Price Book" attrs="{'invisible':[('customer_rank' ,'=', 0)]}">
						<field name="customer_price_book_line">
							<tree string="Price Book Details" create="0" edit="0" delete="0" default_order="order_date desc">
								<field name="partner_id" invisible="1"/>
								<field name="product_sku"/>
								<field name="product_id" options="{'no_open': True, 'no_create':True}"/>
								<field name="sale_order_number"/>
								<field name="sale_order_id" invisible="1"/>
								<field name="invoice_number"/>
								<field name="invoice_id" invisible="1"/>
								<field name="order_date"/>
								<field name="price_unit"/>
							</tree>
							<form string="Price Book Details">
								<group>
									<group>
										<field name="partner_id" invisible="1"/>
										<field name="product_sku" readonly="1" force_save="1"/>
										<field name="product_id" options="{'no_open': True, 'no_create':True}" readonly="1" force_save="1"/>
										<field name="price_unit" readonly="1" force_save="1"/>
									</group>
									<group>
										<field name="sale_order_number" readonly="1" force_save="1"/>
										<field name="invoice_number" readonly="1" force_save="1"/>
										<field name="order_date" readonly="1" force_save="1"/>
										<field name="sale_order_id" invisible="1"/>
										<field name="invoice_id" invisible="1"/>
									</group>
								</group>
							</form>
						</field>
					</page>
					<page name="vendor_price_book_line" string="Vendor Price Book" attrs="{'invisible':[('supplier_rank' ,'=', 0)]}">
						<field name="vendor_price_book_line">
							<tree string="Price Book Details" create="0" edit="0" delete="0" default_order="order_date desc">
								<field name="partner_id" invisible="1"/>
								<field name="product_sku"/>
								<field name="product_id" options="{'no_open': True, 'no_create':True}"/>
								<field name="purchase_order_number"/>
								<field name="bill_number"/>
								<field name="order_date"/>
								<field name="price_unit"/>
							</tree>
							<form string="Price Book Details">
								<group>
									<group>
										<field name="partner_id" invisible="1"/>
										<field name="product_sku" readonly="1" force_save="1"/>
										<field name="product_id" options="{'no_open': True, 'no_create':True}" readonly="1" force_save="1"/>
										<field name="price_unit" readonly="1" force_save="1"/>
									</group>
									<group>
										<field name="purchase_order_number" readonly="1" force_save="1"/>
										<field name="bill_number" readonly="1" force_save="1"/>
										<field name="order_date" readonly="1" force_save="1"/>
										<field name="purchase_order_id" invisible="1"/>
										<field name="bill_id" invisible="1"/>
									</group>
								</group>
							</form>
						</field>
					</page>
				</xpath>
			</field>
		</record>

