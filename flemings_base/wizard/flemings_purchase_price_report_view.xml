<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="flemings_purchase_price_report_wizard_xlsx" model="ir.actions.report">
	        <field name="name">Purchase Price Report</field>
	        <field name="model">flemings.purchase.price.report.wizard</field>
	        <field name="report_type">xlsx</field>
	        <field name="report_name">flemings_base.flemings_purchase_price_report_wizard_xlsx</field>
	        <field name="report_file">Purchase Price Report</field>
	    </record>
	
		<record id="view_flemings_purchase_price_report_wizard_form" model="ir.ui.view">
			<field name="name">view.flemings.purchase.price.report.wizard.form</field>
			<field name="model">flemings.purchase.price.report.wizard</field>
			<field name="arch" type="xml">
				<form string="Purchase Price Report">
                    <group col="2">
                        <label for="from_date" string="Period"/>
                        <div>
                            <field name="from_date" required="1" class="oe_inline"/>
                            <span style="padding-left:15px;padding-right:15px; font-weight:bold;">-</span>
                            <field name="to_date" required="1" class="oe_inline"/>
                        </div>
                    </group>
                    <group/><group/>

                    <group col="2">
                        <field colspan="2" name="product_ids" options="{'no_create':True}">
                            <tree>
                                <field name="name" string="Product Name"/>
                                <field name="default_code" string="Internal Reference"/>
                                <field name="uom_po_id" string="Purchase UOM"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="name" string="Product Name"/>
                                        <field name="default_code" string="Internal Reference"/>
                                        <field name="uom_po_id" string="Purchase UOM"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </group>
                    <group/><group/>

                    <group col="2">
                        <field name="partner_ids" widget="many2many_tags" options="{'no_create':True}"/>
                        <field name="company_id" options="{'no_create':True}" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Print" name="generate_excel_report" class="oe_highlight" type="object"/>
                        <button string="Cancel" special="cancel" />
                    </footer>
				</form>
			</field>
		</record>
	
        <record id="action_flemings_purchase_price_report_wizard" model="ir.actions.act_window">
            <field name="name">Purchase Price Report</field>
            <field name="res_model">flemings.purchase.price.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_flemings_purchase_price_report_wizard" parent="purchase.purchase_report_main" action="action_flemings_purchase_price_report_wizard" sequence="10"/>

	</data>
</odoo>