<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_statement_account_report_wizard" model="ir.ui.view">
	    <field name="name">statement.account.report.wizard.form</field>
	    <field name="model">statement.account.report.wizard</field>
	    <field name="arch" type="xml">
	    <form string="Statement of Account">
	        <group>
	            <field name="date" required="1" />
	        	<field name="rp_logo" />
	        	<field name="partner_ids" />
	            <field name="company_ids" widget="many2many_tags" invisible="1" />
	        </group>
	        <footer>
	            <button name="print_report" string="Print" type="object" class="btn-primary"/>
	            <button string="Cancel" special="cancel" class="btn-secondary"/>
	        </footer>
	    </form>
	    </field>
	</record>

	<record id="action_statement_account_report" model="ir.actions.act_window">
	    <field name="name">Statement of Account</field>
	    <field name="type">ir.actions.act_window</field>
	    <field name="res_model">statement.account.report.wizard</field>
	    <field name="view_mode">form</field>
	    <field name="target">new</field>
	</record>
	
	<menuitem
	    name="Statement of Account"
	    parent="account_reports.account_reports_partners_reports_menu"
	    action="action_statement_account_report"
	    id="menu_statement_account_report"
	    sequence="300"/>

</odoo>
