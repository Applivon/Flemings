<odoo>
	<data>
		
	    <record id="fg_gross_profit_report_xlsx" model="ir.actions.report">
	        <field name="name">Gross Profit Report</field>
	        <field name="model">fg.gross.profit.report</field>
	        <field name="report_type">xlsx</field>
	        <field name="report_name">flemings_base.fg_gross_profit_report_xlsx</field>
	        <field name="report_file">Gross Profit Report</field>
	    </record>

		<record id="fg_gross_profit_report_wizard_form_view" model="ir.ui.view">
            <field name="name">fg.gross.profit.report.wizard.form.view</field>
            <field name="model">fg.gross.profit.report</field>
            <field name="arch" type="xml">
				<form string="Gross Profit Report">
					<sheet>
						<group>
							<field name="date_from" required="1"/>
							<field name="date_to" required="1"/>
							<field name="company_id" invisible="1"/>
						</group>
						<group/><group/>

						<group>
							<field name="partner_ids" widget="many2many_tags" options="{'no_open':True, 'no_create':True}"/>
						</group>
						<group/><group/>

						<group>
							<field name="user_ids" widget="many2many_tags" options="{'no_open':True, 'no_create':True}"/>
						</group>
						<group/><group/>

						<group>
							<field name="product_ids" options="{'no_create':True}">
								<tree>
									<field name="name" string="Product Name"/>
									<field name="default_code" string="Internal Reference"/>
								</tree>
								<form>
									<group>
										<group>
											<field name="name" string="Product Name"/>
											<field name="default_code" string="Internal Reference"/>
										</group>
									</group>
								</form>
							</field>
						</group>

						<footer>
							<button name="generate_xlsx_report" string="Print" type="object" class="btn-primary"/>
							<button string="Cancel" special="cancel" class="btn-default"/>
						</footer>
					</sheet>
				</form>
            </field>
		</record>

		<record id="action_fg_gross_profit_report_wizard" model="ir.actions.act_window">
			<field name="name">Gross Profit Report</field>
			<field name="res_model">fg.gross.profit.report</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_fg_gross_profit_report_wizard" parent="menu_accounting_invoicing_reports"
				  action="action_fg_gross_profit_report_wizard" sequence="15"/>

    </data>
</odoo>
