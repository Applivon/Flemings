<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="cogs_detailed_report_wizard_xlsx" model="ir.actions.report">
	        <field name="name">COGS Report</field>
	        <field name="model">cogs.detailed.report.wizard</field>
	        <field name="report_type">xlsx</field>
	        <field name="report_name">flemings_base.cogs_detailed_report_wizard_xlsx</field>
	        <field name="report_file">COGS Report</field>
	    </record>
	
		<record id="view_cogs_detailed_report_wizard_form" model="ir.ui.view">
			<field name="name">view.cogs.detailed.report.wizard.form</field>
			<field name="model">cogs.detailed.report.wizard</field>
			<field name="arch" type="xml">
				<form string="COGS Report">
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="file_data" filename="filename" invisible="1"/>
                            <field name="filename" invisible="1"/>
                        </group>
                    </group>
                    <group/><group/>

                    <group>
                        <field name="product_ids" options="{'no_create':True}">
                            <tree>
                                <field name="name" string="Product Name"/>
                                <field name="default_code" string="Internal Reference"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="name" string="Product Name"/>
                                        <field name="default_code" string="Internal Reference"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </group>
                    <footer>
                        <button string="Print" name="generate_excel_report" class="oe_highlight" type="object"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
	
        <record id="action_cogs_detailed_report_wizard" model="ir.actions.act_window">
            <field name="name">COGS Report</field>
            <field name="res_model">cogs.detailed.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_cogs_detailed_report_wizard" parent="menu_accounting_detailed_reports"
                  action="action_cogs_detailed_report_wizard" sequence="10"/>

	</data>
</odoo>