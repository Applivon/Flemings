<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="purchase_cogs_summary_report_wizard_xlsx" model="ir.actions.report">
	        <field name="name">Summary Report for Purchase, Inventory, COGS</field>
	        <field name="model">purchase.cogs.summary.report.wizard</field>
	        <field name="report_type">xlsx</field>
	        <field name="report_name">flemings_base.purchase_cogs_summary_report_wizard_xlsx</field>
	        <field name="report_file">Summary Report for Purchase, Inventory, COGS</field>
	    </record>
	
		<record id="view_purchase_cogs_summary_report_wizard_form" model="ir.ui.view">
			<field name="name">view.purchase.cogs.summary.report.wizard.form</field>
			<field name="model">purchase.cogs.summary.report.wizard</field>
			<field name="arch" type="xml">
				<form string="Summary Report for Purchase, Inventory, COGS">
                    <group>
                        <group>
                            <field name="from_date" required="1"/>
                            <field name="to_date" required="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Print" name="generate_excel_report" class="oe_highlight" type="object"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
				</form>
			</field>
		</record>
	
        <record id="action_purchase_cogs_summary_report_wizard" model="ir.actions.act_window">
            <field name="name">Summary Report for Purchase, Inventory, COGS</field>
            <field name="res_model">purchase.cogs.summary.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_accounting_detailed_reports" name="Detailed Reports"
                  parent="account.menu_finance_reports" sequence="2"/>

        <menuitem id="menu_accounting_invoicing_reports" name="Invoicing Reports"
                  parent="account.menu_finance_reports" sequence="3"/>

        <menuitem id="menu_purchase_cogs_summary_report_wizard" parent="menu_accounting_detailed_reports"
                  name="Summary Report for Pur., Inv., COGS" action="action_purchase_cogs_summary_report_wizard" sequence="5"/>

	</data>
</odoo>