<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <record id="purchase_audit_list_summary_wizard_xlsx" model="ir.actions.report">
	        <field name="name">Purchase Audit List Summary</field>
	        <field name="model">purchase.audit.list.summary.wizard</field>
	        <field name="report_type">xlsx</field>
	        <field name="report_name">flemings_base.purchase_audit_list_summary_wizard_xlsx</field>
	        <field name="report_file">Purchase Audit List Summary</field>
	    </record>
	
		<record id="view_purchase_audit_list_summary_wizard_form" model="ir.ui.view">
			<field name="name">view.purchase.audit.list.summary.wizard.form</field>
			<field name="model">purchase.audit.list.summary.wizard</field>
			<field name="arch" type="xml">
				<form string="Purchase Audit List Summary">
                    <group col="2">
                        <label for="from_date" string="Period"/>
                        <div>
                            <field name="from_date" required="1" class="oe_inline"/>
                            <span style="padding-left:15px;padding-right:15px; font-weight:bold;">-</span>
                            <field name="to_date" required="1" class="oe_inline"/>
                        </div>
                    </group>
                    <group/><group/>

                    <group col="2">
                        <field name="partner_ids" widget="many2many_tags" options="{'no_create':True}"/>
                        <field name="file_data" filename="filename" invisible="1"/>
                        <field name="filename" invisible="1"/>
                        <field name="company_id" options="{'no_create':True}" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Print" name="generate_excel_report" class="oe_highlight" type="object"/>
                        <button string="Cancel" special="cancel" />
                    </footer>
				</form>
			</field>
		</record>
	
        <record id="action_purchase_audit_list_summary_wizard" model="ir.actions.act_window">
            <field name="name">Purchase Audit List Summary</field>
            <field name="res_model">purchase.audit.list.summary.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_purchase_audit_list_summary_wizard" parent="menu_accounting_detailed_reports" action="action_purchase_audit_list_summary_wizard" sequence="15"/>

	</data>
</odoo>